/*

    Test basic functionality of sequence source with logging off and looping on

*/

import sim;
import globals;

defproc test ()
{
    pint tokens = 2;
    pint data[tokens];
    data = {3, 9};

    sim::source_sequence<8, tokens, data, true, 0, false> src;
    sim::sink<8, 0, true> snk;

    snk.I = src.O;
    src.enable = Vdd;
    snk.enable = Vdd;
}
