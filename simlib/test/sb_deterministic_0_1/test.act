/*

    Test basic functionality of deterministic scoreboard
    More than 1 channel

*/

import sim;

defproc test ()
{
    pint D_WIDTH = 8;

    sim::scoreboard::deterministic<D_WIDTH, 2, true> sb;

    chp {
        // send the model generated data
        sb.OUT_M[0]!12;
        sb.OUT_M[1]!26;
        // send the DUT data
        sb.OUT_D[0]!12;
        sb.OUT_D[1]!26
    }
}