    sim::scoreboard::lockstep<D_WIDTH, 1, 1, false> sb;

    chp {
        log ("Sending data");
        // send some input data
        sb.IN[0]!6; 

        // send the model generated data
        sb.OUT_M[0]!12;
        // send the DUT data
        sb.OUT_D[0]!12
    }
}