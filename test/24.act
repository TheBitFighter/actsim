defproc src(chan!(int) x)
{
  int a;
  chp {
    a:=0;
   *[ a < 1000 -> x!a; a := a + 1 ]
  }
}

defproc sink(chan?(int) x)
{
  int t;
  chp {
   *[ x?t; log ("got ", t) ]
  }
}

defproc buffer (chan?(int) l; chan!(int) r)
{
  int x;
  bool b;
  chp {
    b-;
   *[ l?x; skip; [b -> x:= x + 1 [] ~b -> skip ]; b:=~b; r!x ]
  }
}

defproc twobuf (chan?(int) l; chan!(int) r)
{
  buffer b0, b1;
  b0.l = l;
  b0.r = b1.l;
  b1.r = r;
}


defproc test()
{
  pint N = 50;
  
  twobuf b[N];

  src source(b[0].l);
  sink bucket(b[N-1].r);

  (i:N-1: b[i].r = b[i+1].l;)
}

test t;
