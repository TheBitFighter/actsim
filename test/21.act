deftype tst <: int<32> (int<4> x; int<18> y; int<10> z)
{
  methods {
     set {
       x := (self & 0xf);
       y := (self >> 4) & 0x3ffff;
       z := (self >> 22) & 0x7ff
     }
     get {
      self := (z << 22) | (y << 4) | x
     }
  }
}

defproc src(chan!(bool) x)
{
  tst w; 
  chp {
    w := 0;
    w.x := 2;
   *[ w < 100 -> x!false; w:=w+1; log("w = ", w)  ]
  }
}

defproc sink(chan?(bool) x)
{
  bool t;
  chp {
   *[ x?t ]
  }
}

defproc buffer (chan?(bool) l; chan!(bool) r)
{
  bool x;
  chp {
   *[ l?x; x:=~x; log("got a value ", x); r!x ]
  }
}

defproc test()
{
  buffer b;
  src source(b.l);
  sink bucket(b.r);
}

test t;
